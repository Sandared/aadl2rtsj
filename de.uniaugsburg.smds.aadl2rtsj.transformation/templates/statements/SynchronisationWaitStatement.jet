<%@ jet package="de.uniaugsburg.smds.aadl2rtsj.converter" class="SynchronisationWaitStatement" skeleton="SynchronisationObject.skeleton" %>
		synchronized(<%=getSynchronisationObjectName(connection)%>){
			try{
				while(!<%=getObjectName(connection)%>.isDirty()){
					<%=getSynchronisationObjectName(connection)%>.wait();
				}
			}catch(InterruptedException e){
				e.printStackTrace();
			}
		}
